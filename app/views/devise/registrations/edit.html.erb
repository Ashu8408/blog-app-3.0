<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-4">Edit Your Profile</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f| %>
    
    <!-- Email -->
    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
      <%= f.email_field :email, class: "w-full p-2 border rounded-md" %>
    </div>

    <!-- Current Password (Required for Changes) -->
    <div class="mb-4">
      <%= f.label :current_password, "Current Password (Required to Save Changes)", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :current_password, class: "w-full p-2 border rounded-md", autocomplete: "current-password" %>
    </div>

    <!-- New Password -->
    <div class="mb-4">
      <%= f.label :password, "New Password", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password, class: "w-full p-2 border rounded-md", autocomplete: "new-password" %>
    </div>

    <!-- Confirm New Password -->
    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm New Password", class: "block text-gray-700 font-bold mb-2" %>
      <%= f.password_field :password_confirmation, class: "w-full p-2 border rounded-md", autocomplete: "new-password" %>
    </div>

    <!-- Submit Button -->
    <%= f.submit "Update Profile", class: "w-full bg-blue-500 text-white p-2 rounded-md" %>
  <% end %>

  <!-- Cancel Account -->
  <div class="mt-6 text-center">
    <%= link_to "Cancel My Account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 underline" %>
  </div>

  <!-- Back to Home -->
  <div class="mt-4 text-center">
    <%= link_to "Back to Home", root_path, class: "text-gray-600 underline" %>
  </div>
</div>
