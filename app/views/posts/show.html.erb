<% content_for :page_title, @post.title %>
<section class="container mx-auto py-6">
  <div class="shadow-md rounded-lg p-4">
    <nav>
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-bold">Actions</h2>
        <div class="flex mt-5 gap-3">
          <%= link_to "Edit", edit_post_path(@post), class:"bg-gray-500 text-white px-3 py-1 rounded hover:bg-gray-700" %>        
          <%= button_to 'Delete', post_path(@post), method: :delete, class: "bg-red-500 text-white px-3 py-1 rounded hover:bg-red-700", data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </nav>
    <div class="mt-3">
      <%= @post.content %>
    </div>
  </div>
</section>

<section class="container mx-auto py-6">
  <h2 class="text-xl font-bold mb-3"><%= @post.comments.count %> Comments</h2>
    <%= render @post.comments %>
  <div class="mt-6 p-4 rounded-lg">
    <h3 class="text-lg font-bold mb-3">Leave a reply</h3>
    <%= render 'comments/form' %>
  </div>
</section>
