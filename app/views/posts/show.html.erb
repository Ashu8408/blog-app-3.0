<section class="container mx-auto mt-4 py-6">
  <h2 class="text-xl font-bold mb-3"><%= @post.comments.where(is_deleted: false).count %> Comments</h2>

  <div class="flex gap-5 mb-4">
    <input type="text" id="commentSearch" placeholder="Search comments" class="w-full px-3 py-2 border rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
    <p id="searchResultsComments" class="whitespace-nowrap mt-2"></p>
  </div>


  <div id="commentsContainer">
    <% @post.comments.where(is_deleted: false).each do |comment| %>
      <div class="flex justify-between bg-white shadow-md rounded-lg p-4 mb-4 comment-item" data-comment-id="<%= comment.id %>">
        <p class="comment-content text-gray-700"><%= comment.comment %></p>
        <%= button_to 'Delete', [comment.post, comment], method: :delete, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>
  </div>

  <button id="showMoreComments" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700 mt-4 w-full">
  Show More
  </button>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const searchInput = document.getElementById("commentSearch");
    const comments = document.querySelectorAll(".comment-item");

    searchInput.addEventListener("input", function() {
      let ResultsCount =0
      const searchText = searchInput.value.toLowerCase();

      comments.forEach(comment => {
        const content = comment.querySelector(".comment-content").textContent.toLowerCase();

        if (content.includes(searchText)) {
          ++ResultsCount;
          comment.style.display = "block";
        } else {
          comment.style.display = "none";
        }
      });
      searchResultsComments.textContent = ResultsCount > 0 ? `${ResultsCount} results found` : "No results found";
    });

  });

  const commentsPerPage = 5;
  let visibleComments = commentsPerPage;

  function updateCommentList() {
    const comments = document.querySelectorAll(".comment-item");
    comments.forEach((comment, index) => {
      comment.style.display = index < visibleComments ? "block" : "none";
    });

    const showMoreButton = document.getElementById("showMoreComments");
    if (visibleComments >= comments.length) {
      showMoreButton.style.display = "none";
    } else {
      showMoreButton.style.display = "block";
    }
  }

  document.getElementById("showMoreComments").addEventListener("click", () => {
    visibleComments += commentsPerPage;
    updateCommentList();
  });

  document.addEventListener("DOMContentLoaded", updateCommentList);

</script>