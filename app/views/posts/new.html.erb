<div class="container mx-auto p-4 shadow-md rounded-lg">
  <h1 class="ml-5">Post Page</h1>
  
  <%= form_with(model: @post, local: true) do |f| %>
    <div class="mb-3">
      <h2 class="font-bold">Title:</h2>
      <%= f.text_field :title, class: 'w-full px-2 py-1 border rounded focus:outline-none focus:ring-2' %>
    </div>
    
    <div class="mb-3">
      <h2 class="font-bold">Post your thoughts:</h2>
      <%= f.text_area :content, class: 'w-full px-2 py-1 border rounded focus:outline-none focus:ring-2' %>
    </div>

    <div class="flex items-center gap-5">
      <h5>Write your thoughts.</h5>
      <%= f.submit 'Create Post', class: "bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
