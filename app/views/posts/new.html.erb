<%= turbo_frame_tag "turbo-content" do %>
  <div class="container bg-yellow-50 mx-auto p-4 shadow-md rounded-lg">
    <h1 class="text-lg font-bold p-2">Create New Blog Post</h1>
    
    <%= form_with(model: @post, local: true, class: 'p-4') do |f| %>
      <div class="mb-3">
        <label class="font-bold">Title:</label>
        <%= f.text_field :title, class: 'w-full bg-white px-2 py-1 border rounded focus:outline-none focus:ring-2', required: true %>
      </div>
      
      <div class="mb-3">
        <label class="font-bold">Post your thoughts:</label>
        <%= f.text_area :content, class: 'w-full bg-white px-2 py-1 border rounded focus:outline-none focus:ring-2', required: true %>
      </div>

    <div class="flex items-center justify-between mb-2">
      <div class="flex"><label>Upload Images:</label>
      <%= f.file_field :images, multiple: true, class: 'bg-blue-400 text-white px-3 py-1 rounded hover:bg-blue-500 ml-5', accept: "image/*" %>
      </div>
        <%= f.submit 'Create Post', class: "bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
<%end%>