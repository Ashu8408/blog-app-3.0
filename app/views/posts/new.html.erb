<%= turbo_frame_tag "turbo-content" do %>
  <div data-controller="create_post" class="container bg-yellow-50 mx-auto p-4 shadow-md rounded-lg">
    <h1 class="text-lg font-bold p-2">Create New Blog Post</h1>
    
    <%= form_with(model: @post, class: 'p-4', data: { turbo: false }) do |f| %>

      <div class="mb-3">
        <label class="font-bold">Title:</label>
        <%= f.text_field :title, class: 'w-full bg-white px-2 py-1 border rounded focus:outline-none focus:ring-2' %>
        <div id="title_error_1" class="hidden text-red-500">Title cannot be blank</div>
        <div id="title_error_2" class="hidden text-red-500">Title cannot exceed 50 words</div>
      </div>
      <div class="field p-3">
        <%= f.label :body %>
        <%= f.rich_text_area :body, class: 'w-full bg-white px-2 py-1 border rounded focus:outline-none focus:ring-2' %>
      </div>
      <div class="mb-3">
        <label class="font-bold">Post your thoughts:</label>
        <%= f.text_area :content, class: 'w-full bg-white px-2 py-1 border rounded focus:outline-none focus:ring-2' %>
      </div>

    <div class="flex items-center justify-between mb-2">
      <div class="flex"><label>Upload Images:</label>
      <%= f.file_field :images, multiple: true, class: 'bg-blue-400 text-white px-3 py-1 rounded hover:bg-blue-500 ml-5', accept: "image/*" %>
      </div>
        <div class="items-end">
          <div id="create_post_error" class="hidden text-red-500">Please fill the required field</div>
          <%= f.submit 'Create Post', class: "bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-700", data: { action: 'click->create_post#submitForm' } %>
        </div>
      </div>
    <% end %>
  </div>
<%end%>