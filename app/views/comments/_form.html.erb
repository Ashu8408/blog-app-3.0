<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <div class="flex gap-2 p-2">
    <label class="font-bold p-2">Comment:</label>
    <%= f.text_area :comment, class: 'w-full bg-white px-2 py-1 border rounded focus:outline-none focus:ring-2', placeholder: "Write a Comment...", required: true %>
  </div>
  <div class="text-right p-2">
    <%= f.button :submit, 'Leave a reply', class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>
