<div class="container mx-auto p-6 bg-gray-100 shadow-lg rounded-lg text-center">
  <%= link_to "Posts Homepage", posts_path, class: "text-blue-500 hover:underline text-lg" %>

  <h1 class="text-3xl font-bold mt-4 text-gray-800">Login Homepage</h1>

  <div class="mt-6 p-4 bg-white rounded-lg shadow-md">
    <h3 class="text-xl font-semibold text-gray-700">User Logins</h3>

    <% if user_signed_in? %>
      <div class="mt-4">
        <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700" %>
        <%= link_to 'Edit User Registration', edit_user_registration_path, class: "block mt-2 text-blue-500 hover:underline" %>
      </div>
    <% else %>
      <div class="mt-4 flex flex-col gap-3">
        <%= link_to 'Sign In', new_user_session_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
        <%= link_to 'Sign Up', new_user_registration_path, class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-700" %>
      </div>
    <% end %>
  </div>
</div>
