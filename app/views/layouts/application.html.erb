<!DOCTYPE html> 
<html>
  <head>
    <title>DemoBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-gray-100 text-gray-900">
    
    <!-- Navbar -->
    <nav class="bg-blue-600 p-4">
      <div class="container mx-auto flex justify-between items-center">
        <%= link_to 'Blog app 3.0', root_path, class: "text-white text-xl font-bold" %>
        <div>
          <%= link_to "Create New Post", new_post_path, class: "text-white bg-blue-500 hover:bg-blue-700 px-4 py-2 rounded" %>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="bg-blue-500 text-white py-16">
      <div class="container mx-auto text-center">
        <h1 class="text-4xl font-bold">
          <%= yield :page_title %>
        </h1>
      </div>
    </section>

    <!-- Main Content -->
    <main class="container mx-auto py-8">
      <%= yield %>
    </main>

  </body>
</html>
